<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="abayomi.code.parking.SignUpActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:ems="10"
        android:id="@+id/editText_SignUpActivity_Password1"
        android:layout_marginTop="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/imageView_SignUpActivity_ImageViewCorrect"
        android:layout_toStartOf="@+id/imageView_SignUpActivity_ImageViewCorrect" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Re-enter password"
        android:id="@+id/editText_SignUpActivity_Password2"
        android:layout_below="@+id/editText_SignUpActivity_Password1"
        android:layout_alignLeft="@+id/editText_SignUpActivity_Password1"
        android:layout_alignStart="@+id/editText_SignUpActivity_Password1"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@+id/imageView_SignUpActivity_ImageViewCorrect"
        android:layout_toLeftOf="@+id/imageView_SignUpActivity_ImageViewCorrect" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_SignUpActivity_ImageViewCorrect"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/editText_SignUpActivity_Password1"
        android:layout_above="@+id/editText_SignUpActivity_Password2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="E-Mail"
        android:id="@+id/editText_SignUpActivity_Mail"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="Phone number"
        android:ems="10"
        android:id="@+id/editText_SignUpActivity_Phone"
        android:layout_below="@+id/editText_SignUpActivity_Password2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:layout_alignRight="@+id/imageView_SignUpActivity_ImageViewCorrect"
        android:layout_alignEnd="@+id/imageView_SignUpActivity_ImageViewCorrect" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="Sign up"
        android:id="@+id/button_SignUpActivity_SignUp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="91dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />
</RelativeLayout>
